<Window x:Class="JoyMapper.ProfileEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoyMapper"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="347" Width="526">
    <d:Window.DataContext>
        <local:ProfileEditWindowViewModel/>
    </d:Window.DataContext>
    <DockPanel Margin="10">
        <TextBlock DockPanel.Dock="Top" Text="Имя профиля:"/>
        <TextBox DockPanel.Dock="Top" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock DockPanel.Dock="Top" Margin="0,10,0,0" Text="Паттерны:"/>
        <StackPanel Margin="0,10,0,10" DockPanel.Dock="Top" HorizontalAlignment="Left" Orientation="Horizontal">
            <Button Content="Добавить" Padding="10,3" Margin="0,0,10,0"></Button>
            <Button Content="Удалить" Padding="10,3"></Button>
        </StackPanel>
        <StackPanel Margin="0,10,0,0" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="Сохранить" Padding="10,3"></Button>
        </StackPanel>
        <ListBox></ListBox>
    </DockPanel>
</Window>
