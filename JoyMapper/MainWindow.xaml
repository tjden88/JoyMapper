<Window x:Class="JoyMapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoyMapper"
        mc:Ignorable="d"
        Title="JoyMapper" Height="450" Width="800">
    <d:Window.DataContext>
        <local:MainWindowViewModel/>
    </d:Window.DataContext>
    <TabControl>
        <TabItem Header="Профили"/>
        <TabItem Header="Настройка"/>
        <TabItem Header="Debug">
            <ListBox ItemsSource="{Binding JoyDevices}" DisplayMemberPath="Name"></ListBox>
        </TabItem>

    </TabControl>
</Window>
