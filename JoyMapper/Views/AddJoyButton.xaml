<Window x:Class="JoyMapper.Views.AddJoyButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:WPR.Helpers;assembly=WPR"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource ChromeWindow}"
        BorderBrush="{DynamicResource BackgroundColorBrush}"
        helpers:WindowHelper.WindowHeaderForeground="{DynamicResource PrimaryTextColorBrush}"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Title="Нажмите кнопку на джойстике" Width="320" Height="150">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock Name="JoyNameText" HorizontalAlignment="Center" Text="Джойстик...."  FontSize="14" Margin="5" />
        <TextBlock Name="ButtonNumberText" HorizontalAlignment="Center" Text="Кнопка...." FontSize="14"/>
        <Button Content="ПРИНЯТЬ" IsDefault="True"
                Command="{Binding AcceptButtonCommand}" HorizontalAlignment="Center" Margin="10"/>
    </StackPanel>
</Window>
