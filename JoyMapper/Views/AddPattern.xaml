<Window x:Class="JoyMapper.Views.AddPattern"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:models="clr-namespace:JoyMapper.Models"
        PreviewKeyDown="AddPattern_OnPreviewKeyDown"
        PreviewKeyUp="AddPattern_OnPreviewKeyUp"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Добавление паттерна" Height="459" Width="578">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:EventTrigger.Actions>
                <b:InvokeCommandAction Command="{Binding AttachJoyButtonCommand}"/>
            </b:EventTrigger.Actions>
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10" TextBlock.FontWeight="Bold">
            <TextBlock VerticalAlignment="Center" Text="Кнопка джойстика:" />
            <TextBlock Name="JoyNameText" VerticalAlignment="Center"  Text="" Margin="5,0" />
            <TextBlock Name="JoyBtnNumberText" VerticalAlignment="Center" Text="-не определено-" />
            <Button Command="{Binding AttachJoyButtonCommand}" Margin="10" Padding="10,2" Content="Определить кнопку" />
        </StackPanel>
        <Separator Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0"/>
        <GroupBox Grid.Row="2" Grid.Column="0" Header="Комбинация клавиш при нажатии">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <Button Name="RecordPressButton" DockPanel.Dock="Top" Margin="0,10" Content="Начать запись" Click="ButtonPressRecord_Click" />
                    <Button DockPanel.Dock="Top" Margin="10" Content="Очистить" Click="ButtonClearPress_Click" />
                </StackPanel>
                <ListBox Name="PressKeyBindingsList" ItemsSource="{Binding PressKeyBindings}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:KeyboardKeyBinding}">
                            <Grid Margin="5,0">
                                <TextBlock Text="{Binding}"/>
                                <Button HorizontalAlignment="Right" Width="20" VerticalAlignment="Center" Content="X" Foreground="Red"
                                        Click="RemovePressCommand_Click"
                                        Background="Transparent" BorderThickness="0" ToolTip="Удалить" Tag="{Binding}"></Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </GroupBox>
        <GroupBox Grid.Row="2" Grid.Column="1" Header="Действия клавиш при отпускании">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <Button Name="RecordReleaseButton" DockPanel.Dock="Top" Margin="0,10" Content="Начать запись" Click="ButtonReleaseRecord_Click" />
                    <Button DockPanel.Dock="Top" Margin="10" Content="Очистить" Click="ButtonClearRelease_Click" />
                </StackPanel>
                <ListBox Name="ReleaseKeyBindingsList" ItemsSource="{Binding ReleaseKeyBindings}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:KeyboardKeyBinding}">
                            <Grid Margin="5,0">
                                <TextBlock Text="{Binding}"/>
                                <Button HorizontalAlignment="Right" Width="20" VerticalAlignment="Center" Content="X" Foreground="Red"
                                        Click="RemoveReleaseCommand_Click"
                                        Background="Transparent" BorderThickness="0" ToolTip="Удалить" Tag="{Binding}"></Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </GroupBox>
        <DockPanel Margin="10" Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="0" LastChildFill="False">
            <TextBlock VerticalAlignment="Center" Text="Имя паттерна: " />
            <TextBox Name="PatternNameText" Width="200" VerticalAlignment="Center" />
            <Button DockPanel.Dock="Right" Content="Сохранить" Click="ButtonSave_Click" Width="62" />
        </DockPanel>
    </Grid>
</Window>
