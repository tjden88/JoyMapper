<Window x:Class="JoyMapper.Views.Windows.AddJoyBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource ChromeWindow}"
        mc:Ignorable="d"
        Loaded="AddJoyBinding_OnLoaded"
        Closed="AddJoyBinding_OnClosed"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Width = "350" Height="200"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}"
        Title="{Binding Title}">

    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" Text="{Binding JoyName}" Foreground="{DynamicResource TextColorBrush}" TextAlignment="Center"  FontSize="16" Margin="5" />
        <TextBlock Name="ButtonActionText" HorizontalAlignment="Center" Foreground="{DynamicResource AccentColorBrush}" Text="{Binding Description}" FontSize="16"/>
        <Button Content="ПРИНЯТЬ" IsDefault="True" Click="ButtonAccept_OnClick" IsEnabled="{Binding IsBindingSelected}" HorizontalAlignment="Center" Margin="10"/>
    </StackPanel>
</Window>

